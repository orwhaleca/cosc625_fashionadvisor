<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cosc625.fashionadvisor.AddItemActivity">

    <view
        android:id="@+id/color_panel_new"
        class="com.github.danielnilsson9.colorpickerview.view.ColorPanelView"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toRightOf="@+id/color_picker"
        app:layout_constraintTop_toBottomOf="@+id/color_panel_old" />

    <EditText
        android:id="@+id/addItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/add_item_name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:entries="@array/item_types"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/settings_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <view
        class="org.florescu.android.rangeseekbar.RangeSeekBar"
        android:id="@+id/temp_range"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:text="@string/title_type_spinner"
        app:layout_constraintTop_toBottomOf="@+id/addItemName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/title_temp_slider"
        app:layout_constraintTop_toBottomOf="@+id/spinner_items"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/title_color_picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_range" />

    <view
        android:id="@+id/color_picker"
        class="com.github.danielnilsson9.colorpickerview.view.ColorPickerView"
        android:layout_width="225dp"
        android:layout_height="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <view
        android:id="@+id/color_panel_old"
        class="com.github.danielnilsson9.colorpickerview.view.ColorPanelView"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toRightOf="@+id/color_picker"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/temp_range" />

    <ImageView
        android:id="@+id/articlePicture"
        android:layout_width="127dp"
        android:layout_height="147dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/temp_range"
        app:layout_constraintLeft_toRightOf="@+id/addItemName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_splash" />

</android.support.constraint.ConstraintLayout>
